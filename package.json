{
  "name": "@bulma-web/root",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "run-p storybook watch:scss",
    "watch:scss": "node-sass -rw ./packages/*/src -o ./packages/*/src",
    "build:scss": "node-sass -r ./packages/ -o ./packages/",
    "site:build": "yarn storybook:build",
    "storybook": "start-storybook --stories './packages/**/stories/*.stories.{ts,mdx}' --config ./es-dev-server.config.js --open",
    "storybook:build": "wca analyze packages/**/src/*.ts --outFile custom-elements.json && yarn build:storybook && build-storybook --stories './packages/**/stories/*.stories.{js,mdx}' -o _site",
    "lint:eslint": "eslint --ext .ts,.js,.html .",
    "format:eslint": "eslint --ext .ts,.js,.html . --fix",
    "lint:prettier": "prettier \"**/*.{js,ts}\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.{js,ts}\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "check-types": "tsc",
    "build": "lerna run build",
    "build:storybook": "lerna run build:storybook",
    "@bulma-web/button": "yarn workspace @bulma-web/button",
    "@bulma-web/card": "yarn workspace @bulma-web/card",
    "@bulma-web/content": "yarn workspace @bulma-web/content",
    "@bulma-web/media": "yarn workspace @bulma-web/media",
    "@bulma-web/collapse": "yarn workspace @bulma-web/collapse",
    "@bulma-web/styles": "yarn workspace @bulma-web/styles"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-import-meta": "^7.7.4",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@fortawesome/fontawesome-free": "^5.10.2",
    "@open-wc/building-rollup": "^0.9.33",
    "@open-wc/demoing-storybook": "^1.3.10",
    "@open-wc/eslint-config": "^1.1.1",
    "@open-wc/prettier-config": "^0.1.0",
    "@open-wc/webpack-import-meta-loader": "^0.4.1",
    "@storybook/cli": "5.3.0-rc.0",
    "@storybook/core": "5.3.0-rc.0",
    "@types/jest": "^24.0.18",
    "@types/node-sass": "^4.11.0",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-bundled-import-meta": "^0.3.1",
    "babel-plugin-inline-import": "^3.0.0",
    "concurrently": "^4.1.2",
    "es-dev-server": "^1.18.3",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-utils": "^1.4.2",
    "extra-watch-webpack-plugin": "^1.0.3",
    "extract-loader": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.0",
    "react-docgen-typescript-loader": "^3.1.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.22.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "to-string-loader": "^1.1.6",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.6.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "web-component-analyzer": "^1.0.0",
    "webpack-watch-files-plugin": "^1.0.3",
    "yarn": "^1.17.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "lit-element": "^2.2.1"
  }
}
