{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "outDir": "lib",
    "declaration": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // Disallow features that require cross-file information for emit.
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts",
    "node_modules/@open-wc/**/*.js",
    "d.ts"
  ],
  "exclude": [
    "node_modules/!(@open-wc)"
  ]
}
